<!DOCTYPE html>
<html>
<head>
	<title>Events - Twitter</title>
	<link rel="stylesheet" type="text/css" href="bootstrap.min.css">
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
	<link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet'>
	<script type="text/javascript" src="jquery.js"></script>
	<script type="text/javascript" src="bootstrap.min.js"></script>
	<style type="text/css">
		body{
			background: url(1.jpg);
		    background-size: cover;
		    background-position: center;
		    background-repeat: no-repeat;
		    background-attachment: fixed;
		    font-family: 'Roboto';
		    letter-spacing: 2px;
		    font-size: 12px;
		}
		.form{
		    height: 500px;
		    /*min-width: 35%;*/
		    /*width: 75%;*/
		    /*border: 1px solid red;*/
		    position: fixed;
		    top: 10%;
		}
		@media only screen and (max-width: 600px){
			.form{
				width: 80%;
				left: 10%;
		    	right: 10%
			}
		}
		@media only screen and (min-width: 600px){
			.form{
				width: 60%;
				left: 20%;
				right: 20%;
				/*border: 1px solid red;*/
			}
		}
		@media only screen and (min-width: 800px){
			.form{
				width: 35%;
				left: 32.5%;
				right: 32.5%;
				/*border: 1px solid red;*/
			}
		}
		.form-container{
			background: black;
		    height: 475px;
		    border-radius: 30px;
		    box-shadow: 20px 20px 40px 0px #232323;
		}
		.icon{
			color: #fff;
		    width: 100%;
		    text-align: center;
		    margin: 1rem 0rem;
		}
		.icon span{
			font-size: 44px;
			padding-top: 1rem; 
		}
		.password,.username,.repassword{
			width: 100%;
			text-align: center;
		}
		input[type="text"], input[type="password"]{
			min-width: 50%;
			max-width: 80%;
			height: 50px;
			background: inherit;
			color: #fff;
			border: none;
			/*box-shadow: 24px;*/
			border-bottom: 2px solid white;
			margin: 1rem 0rem;
		}
		input[type="text"]:hover, input[type="password"]:hover{
			background: #111111;
			transition: 0.75s;
		}
		input[type='submit']{
			background: #00C271;
			color: #fff;
			letter-spacing: 0.2em;
			font-weight: bold;
			border: none;
			margin-top: 2rem;
			width: 150px;
			height: 40px;
			border-radius: 15px;
			text-align: center;
		}
		.login-btn{
			width: 100%;
			text-align: center;
		}
		input[type='submit']:hover{
			background: #c59bb2;
			color: #000;
			transition: 0.75s;
		}
		.redirect{
			width: 100%;
			text-align: center;
			margin-top: 1rem;
		}
		.redirect span a{
			text-decoration: none;
			color: #fff;
			font-weight: lighter;
		}
		footer{
			font-weight: bold;
			position: fixed;
		    margin: auto;
		    padding: auto;
		    font-size: 15px;
		    /*border: 1px solid beige;*/
		    bottom: 0;
		    right: 42.5%;
		}
		a{
			color: inherit;
			text-decoration: none;
		}
		a:hover{
			color: inherit;
			text-decoration: none;
		}
	</style>
</head>
<body>
	<!-- <img class="img-fluid" src="1.jpg"> -->
	<div class="container">
		<div class="form login-form">
			<div class="form-container">
				<form action="/register" method="POST">
					<div class="form-inner">
						<div class="icon"><span id="user" class="material-icons">perm_identity</span></div>
						<div class="username">
							<input type="text" placeholder="Username" name="username" autocomplete="off" required="required"><br>
						</div>
						<div class="password">
							<input type="password" placeholder="Password" name="password" autocomplete="off" required="required">
						</div>
						<div class="repassword">
							<input type="password" placeholder="Confirm Password" name="repassword" autocomplete="off" required="required">
						</div>
						<!-- <div class="register-redirect">
							{% block content %}
							    {% for message in get_flashed_messages() %}
							        <label>{{ message }}</label><br>
							    {% endfor %}
							    {% block page_content %}{% endblock %}
							{% endblock %}
						</div> -->
						<div class="login-btn">
							<input type = "submit" value = "Register" />
						</div>
						<div class="redirect">
							<span class="url-for"><a href="/login">Already Have an Account? Click Here.</a></span>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	<!-- <footer>
		<div class="footer-copyright footer-f text-center py-0"><p>Â© 2020 Copyright OLAWUYI </p>
	  	</div>
	</footer> -->
</body>
</html>


